#include "holberton.h"

/**
 * _strlen - checks the length of a string.
 * @s: pointer to string from main.
 *
 * Return: length of string s.
 */
int _strlen(char *s)
{
	if (*s == 0)
		return (0);
	return (1 + _strlen(s +1));
}

