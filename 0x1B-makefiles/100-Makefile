CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton

.PHONY: all clean oclean fclean re
# Runs recipe regardless of whether there is a file with same name

all: $(OBJ) m.h
	$(CC) $? -o $(NAME)

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
